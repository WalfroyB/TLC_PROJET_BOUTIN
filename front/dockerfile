# dockerfile for image_front:v2.0 

# Stage 1 - BUILD

FROM node:10-alpine AS build-step
WORKDIR /app
COPY package.json /app
RUN npm install
COPY . /app
RUN npm run build -- --outputPath=./dist/out

# Stage 2 - PROD

FROM nginx:1-alpine AS prod
COPY --from=build-step /app/dist/out/ /usr/share/nginx/html
COPY ./conf/back.conf etc/nginx/conf.d/back.conf
COPY ./conf/etherpad.conf etc/nginx/conf.d/etherpad.conf
COPY ./conf/phpmyadmin.conf etc/nginx/conf.d/phpmyadmin
